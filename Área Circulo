import java.util.Scanner;

class Main {
  
  public static void main(String[] args) {
     
     Scanner teclado = new Scanner(System.in);
     
     System.out.print("Me informe o raio do círculo: ");
     double x = teclado.nextDouble();

     double p = 3.141592;

     double a = 2 * p * x;
     
     System.out.println("A aréa do círculo é: " + a + "!");

     }

}
